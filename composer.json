{
  "name": "speicher210/business-hours",
  "type": "library",
  "description": "DateTime and business hours (opening, closing times) calculations",
  "keywords": [
    "speicher210",
    "business",
    "opening",
    "closing",
    "hours"
  ],
  "homepage": "https://github.com/Speicher210/business-hours",
  "license": "MIT",
  "authors": [
    {
      "name": "Dragos Protung",
      "email": "dragos@protung.ro",
      "role": "Developer"
    },
    {
      "name": "Cezary StÄ™pkowski",
      "email": "cezary.stepkowski@speicher210.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4",
    "thecodingmachine/safe": "^1.1",
    "webmozart/assert": "^1.8"
  },
  "require-dev": {
    "doctrine/coding-standard": "^7.0",
    "ekino/phpstan-banned-code": "^0.3.1",
    "phpstan/phpstan": "^0.12",
    "phpstan/phpstan-deprecation-rules": "^0.12.2",
    "phpstan/phpstan-phpunit": "^0.12.8",
    "phpstan/phpstan-strict-rules": "^0.12.2",
    "phpstan/phpstan-webmozart-assert": "^0.12.4",
    "phpunit/phpunit": "^9.1",
    "thecodingmachine/phpstan-safe-rule": "^1.0",
    "thecodingmachine/phpstan-strict-rules": "^0.12.0"
  },
  "autoload": {
    "psr-4": {
      "Speicher210\\BusinessHours\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Speicher210\\BusinessHours\\Test\\": "tests"
    }
  },
  "scripts": {
    "analyse-phpstan": [
      "phpstan analyse"
    ],
    "analyse-phpstan-update": [
      "phpstan analyse --generate-baseline"
    ],
    "analyse": [
      "phpstan analyse"
    ],
    "cs-check": "phpcs -p",
    "cs-fix": "phpcbf -p",
    "test": "phpunit --testdox --color=always"
  },
  "config": {
    "sort-packages": true
  }
}
