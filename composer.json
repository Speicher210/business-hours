{
  "name": "speicher210/business-hours",
  "type": "library",
  "description": "DateTime and business hours (opening, closing times) calculations",
  "keywords": [
    "speicher210",
    "business",
    "opening",
    "closing"
  ],
  "homepage": "https://github.com/Speicher210/business-hours",
  "license": "MIT",
  "authors": [
    {
      "name": "Dragos Protung",
      "email": "dragos@protung.ro",
      "role": "Developer"
    },
    {
      "name": "Cezary StÄ™pkowski",
      "email": "cezary.stepkowski@speicher210.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5.21",
    "squizlabs/php_codesniffer": "^3.6.1",
    "phpstan/phpstan": "^0.12.99"
  },
  "autoload": {
    "psr-4": {
      "Speicher210\\BusinessHours\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Speicher210\\BusinessHours\\Test\\": "tests"
    }
  },
  "scripts": {
    "check": [
      "composer validate",
      "@cs-check",
      "@analyse",
      "@test"
    ],
    "test": "phpunit --testdox --color=always",
    "cs-check": "phpcs -p",
    "cs-fix": "phpcbf -p",
    "analyse-update-baseline": "phpstan analyse --generate-baseline",
    "analyse": [
      "phpstan analyse"
    ]
  }
}
