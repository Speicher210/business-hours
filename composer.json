{
  "name": "speicher210/business-hours",
  "type": "library",
  "description": "DateTime and business hours (opening, closing times) calculations",
  "keywords": [
    "business",
    "opening",
    "closing",
    "hours"
  ],
  "homepage": "https://github.com/Speicher210/business-hours",
  "license": "MIT",
  "authors": [
    {
      "name": "Dragos Protung",
      "email": "dragos@protung.de",
      "role": "Developer"
    },
    {
      "name": "Cezary StÄ™pkowski",
      "email": "cezary.stepkowski@speicher210.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-json": "*",
    "thecodingmachine/safe": "^1.3",
    "webmozart/assert": "^1.9"
  },
  "require-dev": {
    "doctrine/coding-standard": "^8.2",
    "ekino/phpstan-banned-code": "^0.3.1",
    "ergebnis/composer-normalize": "^2.9",
    "infection/infection": "^0.20.2",
    "phpstan/phpstan": "^0.12.58",
    "phpstan/phpstan-deprecation-rules": "^0.12.5",
    "phpstan/phpstan-phpunit": "^0.12.16",
    "phpstan/phpstan-strict-rules": "^0.12.5",
    "phpstan/phpstan-webmozart-assert": "^0.12.7",
    "phpunit/phpunit": "^9.5",
    "psalm/plugin-phpunit": "^0.13.0",
    "thecodingmachine/phpstan-safe-rule": "^1.0.1",
    "thecodingmachine/phpstan-strict-rules": "^0.12.1",
    "vimeo/psalm": "^4.3"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.0-dev"
    }
  },
  "autoload": {
    "psr-4": {
      "Speicher210\\BusinessHours\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Speicher210\\BusinessHours\\Test\\": "tests"
    }
  },
  "scripts": {
    "analyse": [
      "@analyse-phpstan",
      "@analyse-psalm"
    ],
    "analyse-phpstan": [
      "phpstan analyse"
    ],
    "analyse-phpstan-update": [
      "phpstan analyse --generate-baseline"
    ],
    "analyse-psalm": [
      "psalm --show-info=false"
    ],
    "analyse-psalm-update": [
      "psalm --set-baseline=psalm.baseline.xml"
    ],
    "check": [
      "composer validate",
      "composer normalize --dry-run",
      "@cs-check",
      "@analyse",
      "@test"
    ],
    "cs-check": "phpcs -p",
    "cs-fix": "phpcbf -p",
    "test": "phpunit --testdox --color=always"
  }
}
